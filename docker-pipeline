#BUILD STAGE:

FROM node:10-alpine as builder

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install


#DELIVERY ARTIFACT STAGE:

FROM node:10-alpine as delivey

WORKDIR /usr/src/app

ENV PATH /usr/src/app/node_modules/.bin:$PATH

COPY --from=builder /usr/src/app/node_modules/ ./node_modules/

COPY . .

CMD ["node", "server.js"]












